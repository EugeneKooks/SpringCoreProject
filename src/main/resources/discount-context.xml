<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
	   					   http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="discountService" class="ua.epam.spring.hometask.service.impl.DiscountServiceImpl">
        <property name="discountStrategies">
            <set>
                <bean class="ua.epam.spring.hometask.service.impl.discountstrategy.BirthdayDiscount"/>
                <bean class="ua.epam.spring.hometask.service.impl.discountstrategy.MultipleDiscount"/>
            </set>
        </property>
    </bean>
</beans>